            document.getElementById('colorPickerOverlay').classList.remove('active');
        }

        // キャンバスサイズをオーバーレイ表示
        function updateCanvasSizeOverlay() {
            const overlay = document.getElementById('canvasSizeOverlay');
            if (!overlay) return;
            overlay.textContent = `${canvas.width} × ${canvas.height} px`;
        }

        function redrawCanvas() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            if (backgroundImage) {
                ctx.drawImage(backgroundImage, 0, 0, canvas.width, canvas.height);
            } else {
                ctx.fillStyle = 'white';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
            }

            shapes.forEach(shape => {
                drawShape(shape, shape === selectedShape);
            });

            // ポリライン描画中のプレビュー
            if (isPolylineActive && polylinePoints.length > 0) {
                ctx.strokeStyle = currentColor;
                ctx.lineWidth = parseInt(document.getElementById('lineWidth').value);
                ctx.beginPath();
                ctx.moveTo(polylinePoints[0].x, polylinePoints[0].y);
                for (let i = 1; i < polylinePoints.length; i++) {
                    ctx.lineTo(polylinePoints[i].x, polylinePoints[i].y);
                }
                ctx.stroke();

                // ポイント表示
                polylinePoints.forEach(pt => {
                    ctx.fillStyle = currentColor;
                    ctx.beginPath();
                    ctx.arc(pt.x, pt.y, 4, 0, Math.PI * 2);
                    ctx.fill();
                });
            }

            // ガイドライン描画
            if (guidelines.length > 0) {
                drawGuidelines();
            }

            updateShapeCount();
        }

        function drawShape(shape, isSelected = false) {
            ctx.save();

            // colorが存在する図形のみRGBA設定
            if (shape.color) {
                const opacity = shape.opacity !== undefined ? (1 - shape.opacity) : 1;
                const r = parseInt(shape.color.slice(1, 3), 16);
                const g = parseInt(shape.color.slice(3, 5), 16);
                const b = parseInt(shape.color.slice(5, 7), 16);
                const rgbaColor = `rgba(${r}, ${g}, ${b}, ${opacity})`;

                ctx.strokeStyle = rgbaColor;
                ctx.lineWidth = shape.width;
                ctx.fillStyle = rgbaColor;
            }

            if (shape.type === 'rect') {
                ctx.strokeRect(shape.x, shape.y, shape.w, shape.h);
            } else if (shape.type === 'circle') {
                ctx.beginPath();
                ctx.ellipse(shape.x + shape.w / 2, shape.y + shape.h / 2, Math.abs(shape.w / 2), Math.abs(shape.h / 2), 0, 0, Math.PI * 2);
                ctx.stroke();
            } else if (shape.type === 'line') {
                ctx.beginPath();
                ctx.moveTo(shape.x, shape.y);
                ctx.lineTo(shape.x + shape.w, shape.y + shape.h);
                ctx.stroke();
            } else if (shape.type === 'arrow') {
                drawArrow(shape);
            } else if (shape.type === 'polyline') {
                ctx.beginPath();
                ctx.moveTo(shape.points[0].x, shape.points[0].y);
                for (let i = 1; i < shape.points.length; i++) {
                    ctx.lineTo(shape.points[i].x, shape.points[i].y);
                }
                ctx.stroke();
            } else if (shape.type === 'freehand') {
                ctx.lineCap = 'round';
                ctx.lineJoin = 'round';
                ctx.beginPath();
                ctx.moveTo(shape.points[0].x, shape.points[0].y);
                for (let i = 1; i < shape.points.length; i++) {
                    ctx.lineTo(shape.points[i].x, shape.points[i].y);
                }
                ctx.stroke();
            } else if (shape.type === 'text') {
                ctx.font = `${shape.fontSize}px Meiryo`;
                ctx.fillText(shape.text, shape.x, shape.y);
            } else if (shape.type === 'highlight') {
                ctx.fillRect(shape.x, shape.y, shape.w, shape.h);
            } else if (shape.type === 'mosaic' || shape.type === 'blur') {
                // キャッシュされた処理済みImageDataを使用
                if (shape.processedImageData) {
                    ctx.putImageData(shape.processedImageData, shape.x, shape.y);
                }
            } else if (shape.type === 'image') {
                // 画像スタンプ描画（キャッシュ使用）
                let img = imageCache.get(shape.imageData);
                if (!img) {
                    img = new Image();
                    img.src = shape.imageData;
                    imageCache.set(shape.imageData, img);
                }
                if (img.complete) {
                    // 回転がある場合はtransformを使用
                    if (shape.rotation && shape.rotation !== 0) {
                        ctx.save();
                        const centerX = shape.x + shape.w / 2;
                        const centerY = shape.y + shape.h / 2;
                        ctx.translate(centerX, centerY);
                        ctx.rotate((shape.rotation * Math.PI) / 180);
                        ctx.drawImage(img, -shape.w / 2, -shape.h / 2, shape.w, shape.h);
                        ctx.restore();
                    } else {
                        ctx.drawImage(img, shape.x, shape.y, shape.w, shape.h);
                    }
                }
            }

            if (isSelected) {
                ctx.strokeStyle = '#005BAB';
                ctx.lineWidth = 2;
                ctx.setLineDash([5, 5]);

                if (shape.type === 'text') {
                    const metrics = ctx.measureText(shape.text);
                    ctx.strokeRect(shape.x - 5, shape.y - shape.fontSize, metrics.width + 10, shape.fontSize + 10);
                } else if (shape.type === 'polyline' || shape.type === 'freehand') {
                    let minX = Infinity, minY = Infinity, maxX = -Infinity, maxY = -Infinity;
                    shape.points.forEach(pt => {
                        minX = Math.min(minX, pt.x);
                        minY = Math.min(minY, pt.y);
                        maxX = Math.max(maxX, pt.x);
                        maxY = Math.max(maxY, pt.y);
                    });
                    ctx.strokeRect(minX - 5, minY - 5, maxX - minX + 10, maxY - minY + 10);
                } else {
                    ctx.strokeRect(shape.x, shape.y, shape.w, shape.h);

                    // リサイズハンドル描画
                    drawResizeHandles(shape);
                }
                ctx.setLineDash([]);
            }

            ctx.restore();
        }

        function drawResizeHandles(shape) {
            const handles = [
                { x: shape.x + shape.w, y: shape.y + shape.h, cursor: 'nwse-resize' },
                { x: shape.x, y: shape.y + shape.h, cursor: 'nesw-resize' },
                { x: shape.x + shape.w, y: shape.y, cursor: 'nesw-resize' },
                { x: shape.x, y: shape.y, cursor: 'nwse-resize' }
            ];

            // リサイズハンドル描画
            handles.forEach(handle => {
                ctx.fillStyle = '#005BAB';
                ctx.strokeStyle = 'white';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.arc(handle.x, handle.y, 5, 0, Math.PI * 2);
                ctx.fill();
                ctx.stroke();
            });

            // 回転ハンドルを追加（画像の場合のみ）
            if (shape.type === 'image') {
                drawRotationHandle(shape);
            }
        }

        // 回転ハンドルを描画
        function drawRotationHandle(shape) {
            // 回転後のハンドル位置を取得
            const handlePos = getRotatedHandlePosition(shape);
            if (!handlePos) return;

            const shapeCenterX = shape.x + shape.w / 2;
            const shapeCenterY = shape.y + shape.h / 2;

            // 接続線を描画
            ctx.strokeStyle = '#005BAB';
            ctx.lineWidth = 2;
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(shapeCenterX, shapeCenterY);
            ctx.lineTo(handlePos.x, handlePos.y);
            ctx.stroke();
            ctx.setLineDash([]);

            // 回転ハンドル（円形）を描画
            ctx.fillStyle = '#FF961C';  // オレンジ色で目立たせる
            ctx.strokeStyle = 'white';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.arc(handlePos.x, handlePos.y, 8, 0, Math.PI * 2);
            ctx.fill();
            ctx.stroke();

            // 回転アイコン（矢印）を描画
            ctx.strokeStyle = 'white';
            ctx.lineWidth = 1.5;
            ctx.beginPath();
            ctx.arc(handlePos.x, handlePos.y, 4, -Math.PI * 0.7, Math.PI * 0.7);
            ctx.stroke();
            
            // 矢印の先端
            ctx.beginPath();
            ctx.moveTo(handlePos.x + 3, handlePos.y - 2);
            ctx.lineTo(handlePos.x + 5, handlePos.y - 1);
            ctx.lineTo(handlePos.x + 3, handlePos.y + 1);
            ctx.stroke();

            // 角度表示
            const rotation = shape.rotation || 0;
            ctx.fillStyle = '#333';
            ctx.font = 'bold 12px Meiryo';
            ctx.textAlign = 'center';
            ctx.fillText(`${rotation.toFixed(0)}°`, handlePos.x, handlePos.y - 15);
        }

        function drawArrow(shape) {
            const fromX = shape.x;
            const fromY = shape.y;
            const toX = shape.x + shape.w;
            const toY = shape.y + shape.h;

            // 線の太さから矢印の先端サイズを計算（線の太さの3倍）
            const lineWidth = shape.width || 2;
            const headlen = lineWidth * 3;
            const headAngleRad = (30 * Math.PI) / 180;  // 固定30度
            const angle = Math.atan2(toY - fromY, toX - fromX);

            // 三角形の高さ分だけ線を短くする
            const lineEndX = toX - (headlen * Math.cos(headAngleRad)) * Math.cos(angle);
            const lineEndY = toY - (headlen * Math.cos(headAngleRad)) * Math.sin(angle);

            // 線分を描画（ctx.strokeStyleとctx.lineWidthはdrawShape内で既に設定済み）
            ctx.beginPath();
            ctx.moveTo(fromX, fromY);
            ctx.lineTo(lineEndX, lineEndY);
            ctx.stroke();

            // 三角形を描画（線の端点に接続）
            ctx.beginPath();
            ctx.moveTo(toX, toY);
            ctx.lineTo(toX - headlen * Math.cos(angle - headAngleRad), toY - headlen * Math.sin(angle - headAngleRad));
            ctx.lineTo(toX - headlen * Math.cos(angle + headAngleRad), toY - headlen * Math.sin(angle + headAngleRad));
            ctx.closePath();
            // ctx.fillStyleはdrawShape内で既に設定済み
            ctx.fill();
        }

        /**
         * モザイク処理: ブロック平均化アルゴリズム
         * ImageDataを受け取り、処理済みImageDataを返す
         */
        function processMosaicData(imageData, size) {
            const data = imageData.data;
            const w = imageData.width;
            const h = imageData.height;

            for (let my = 0; my < h; my += size) {
                for (let mx = 0; mx < w; mx += size) {
                    let r = 0, g = 0, b = 0, a = 0, count = 0;

                    // ブロック内の平均色を計算
                    for (let by = 0; by < size && my + by < h; by++) {
                        for (let bx = 0; bx < size && mx + bx < w; bx++) {
                            const idx = ((my + by) * w + (mx + bx)) * 4;
                            r += data[idx];
                            g += data[idx + 1];
                            b += data[idx + 2];
                            a += data[idx + 3];
                            count++;
                        }
                    }

                    r = Math.floor(r / count);
                    g = Math.floor(g / count);
                    b = Math.floor(b / count);
                    a = Math.floor(a / count);

                    // ブロック全体を平均色で塗りつぶし
                    for (let by = 0; by < size && my + by < h; by++) {
                        for (let bx = 0; bx < size && mx + bx < w; bx++) {
                            const idx = ((my + by) * w + (mx + bx)) * 4;
                            data[idx] = r;
                            data[idx + 1] = g;
                            data[idx + 2] = b;
                            data[idx + 3] = a;
                        }
                    }
                }
            }

            return imageData;
        }

        /**
         * ぼかし処理: 2パスBox Blurアルゴリズム
         * ImageDataを受け取り、処理済みImageDataを返す
         */
        function processBlurData(imageData, strength) {
            const data = imageData.data;
            const w = imageData.width;
            const h = imageData.height;
            const radius = Math.floor(strength / 2);

            // パス1: 水平方向ぼかし
            const tempData = new Uint8ClampedArray(data);
            for (let py = 0; py < h; py++) {
                for (let px = 0; px < w; px++) {
                    let r = 0, g = 0, b = 0, a = 0, count = 0;

                    for (let kx = -radius; kx <= radius; kx++) {
                        const nx = px + kx;
                        if (nx >= 0 && nx < w) {
                            const idx = (py * w + nx) * 4;
                            r += tempData[idx];
                            g += tempData[idx + 1];
                            b += tempData[idx + 2];
                            a += tempData[idx + 3];
                            count++;
                        }
                    }

                    const idx = (py * w + px) * 4;
                    data[idx] = Math.floor(r / count);
                    data[idx + 1] = Math.floor(g / count);
                    data[idx + 2] = Math.floor(b / count);
                    data[idx + 3] = Math.floor(a / count);
                }
            }

            // パス2: 垂直方向ぼかし
            const tempData2 = new Uint8ClampedArray(data);
            for (let py = 0; py < h; py++) {
                for (let px = 0; px < w; px++) {
                    let r = 0, g = 0, b = 0, a = 0, count = 0;

                    for (let ky = -radius; ky <= radius; ky++) {
                        const ny = py + ky;
                        if (ny >= 0 && ny < h) {
                            const idx = (ny * w + px) * 4;
                            r += tempData2[idx];
                            g += tempData2[idx + 1];
                            b += tempData2[idx + 2];
                            a += tempData2[idx + 3];
                            count++;
                        }
                    }

                    const idx = (py * w + px) * 4;
                    data[idx] = Math.floor(r / count);
                    data[idx + 1] = Math.floor(g / count);
                    data[idx + 2] = Math.floor(b / count);
                    data[idx + 3] = Math.floor(a / count);
                }
            }

            return imageData;
        }

        function getResizeHandle(shape, x, y) {
            const handles = [
                { x: shape.x + shape.w, y: shape.y + shape.h, type: 'se' },
                { x: shape.x, y: shape.y + shape.h, type: 'sw' },
                { x: shape.x + shape.w, y: shape.y, type: 'ne' },
                { x: shape.x, y: shape.y, type: 'nw' }
            ];

            for (let handle of handles) {
                const dist = Math.sqrt((x - handle.x) ** 2 + (y - handle.y) ** 2);
                if (dist < 8) {
                    return handle.type;
                }
            }
            return null;
        }

        // 回転後のハンドル位置を計算（Geminiアドバイスに基づく実装）
        function getRotatedHandlePosition(shape) {
            if (shape.type !== 'image') return null;

            // 1. 図形の中心座標
            const shapeCenterX = shape.x + shape.w / 2;
            const shapeCenterY = shape.y + shape.h / 2;

            // 2. 回転前のハンドルのオフセット（中心からの相対位置）
            const handleOffsetY = -shape.h / 2 - 30; // 図形の上端から30px上

            // 3. 図形の回転角度（ラジアンに変換）
            const angleRad = (shape.rotation || 0) * Math.PI / 180;

            // 4. オフセットを回転行列で変換
            const rotatedX = -handleOffsetY * Math.sin(angleRad);
            const rotatedY = handleOffsetY * Math.cos(angleRad);

            // 5. 図形の中心に回転後のオフセットを加算
            return {
                x: shapeCenterX + rotatedX,
                y: shapeCenterY + rotatedY
            };
        }

        // 回転ハンドルのヒットテスト（修正版）
        function getRotationHandle(shape, x, y) {
            if (shape.type !== 'image') return false;

            const handlePos = getRotatedHandlePosition(shape);
            if (!handlePos) return false;

            const dist = Math.sqrt((x - handlePos.x) ** 2 + (y - handlePos.y) ** 2);
            
            // デバッグログ（開発時のみ）
            console.log('ハンドル判定:', {
                mouseX: x.toFixed(1),
                mouseY: y.toFixed(1),
                handleX: handlePos.x.toFixed(1),
                handleY: handlePos.y.toFixed(1),
                distance: dist.toFixed(1),
                isHit: dist < 15
            });
            
            return dist < 15;  // 15pxの範囲内でヒット（判定範囲を拡大）
        }

        // マウス位置から回転角度を計算
        function calculateRotationAngle(shape, mouseX, mouseY) {
            const centerX = shape.x + shape.w / 2;
            const centerY = shape.y + shape.h / 2;

            // マウス位置と図形中心との角度を計算
            const angle = Math.atan2(mouseY - centerY, mouseX - centerX);
            
            // ラジアンから度に変換（0-360度）
            let degrees = (angle * 180 / Math.PI) + 90;  // +90で上を0度に
            if (degrees < 0) degrees += 360;
            
            return Math.round(degrees);
        }

        function hitTest(x, y) {
            for (let i = shapes.length - 1; i >= 0; i--) {
                const shape = shapes[i];

                // ロックされた図形はスキップして下の図形を選択可能に
                if (shape.locked) continue;

                if (shape.type === 'text') {
                    ctx.font = `${shape.fontSize}px Meiryo`;
                    const metrics = ctx.measureText(shape.text);
                    if (x >= shape.x && x <= shape.x + metrics.width &&
                        y >= shape.y - shape.fontSize && y <= shape.y) {
                        return shape;
                    }
                } else if (shape.type === 'polyline') {
                    let minX = Infinity, minY = Infinity, maxX = -Infinity, maxY = -Infinity;
                    shape.points.forEach(pt => {
                        minX = Math.min(minX, pt.x);
                        minY = Math.min(minY, pt.y);
                        maxX = Math.max(maxX, pt.x);
                        maxY = Math.max(maxY, pt.y);
                    });
                    if (x >= minX - 5 && x <= maxX + 5 && y >= minY - 5 && y <= maxY + 5) {
                        return shape;
                    }
                } else if (shape.type === 'freehand') {
                    // フリーハンド図形の当たり判定：線分との最短距離を計算
                    const threshold = Math.max(shape.width || 1, 5); // 線幅または最低5px
                    for (let j = 0; j < shape.points.length - 1; j++) {
                        const p1 = shape.points[j];
                        const p2 = shape.points[j + 1];
                        const dist = pointToLineDistance(x, y, p1.x, p1.y, p2.x, p2.y);
                        if (dist <= threshold) {
                            return shape;
                        }
                    }
                } else {
                    const minX = Math.min(shape.x, shape.x + shape.w);
                    const maxX = Math.max(shape.x, shape.x + shape.w);
                    const minY = Math.min(shape.y, shape.y + shape.h);
                    const maxY = Math.max(shape.y, shape.y + shape.h);

                    if (x >= minX - 5 && x <= maxX + 5 && y >= minY - 5 && y <= maxY + 5) {
                        return shape;
                    }
                }
            }
            return null;
        }

        // 点と線分の最短距離を計算するヘルパー関数
        function pointToLineDistance(px, py, x1, y1, x2, y2) {
            const A = px - x1;
            const B = py - y1;
            const C = x2 - x1;
            const D = y2 - y1;

            const dot = A * C + B * D;
            const lenSq = C * C + D * D;
            let param = -1;

            if (lenSq !== 0) param = dot / lenSq;

            let xx, yy;

            if (param < 0) {
                xx = x1;
                yy = y1;
            } else if (param > 1) {
                xx = x2;
                yy = y2;
            } else {
                xx = x1 + param * C;
                yy = y1 + param * D;
            }

            const dx = px - xx;
            const dy = py - yy;
            return Math.sqrt(dx * dx + dy * dy);
        }

        canvas.addEventListener('mousedown', (e) => {
            const rect = canvas.getBoundingClientRect();
            const scaleX = canvas.width / rect.width;
            const scaleY = canvas.height / rect.height;
            const mouseX = (e.clientX - rect.left) * scaleX;
            const mouseY = (e.clientY - rect.top) * scaleY;

            // ダブルクリック検出
            const currentTime = new Date().getTime();
            const timeDiff = currentTime - lastClickTime;

            if (currentTool === 'select' && timeDiff < 300) {
                const hitShape = hitTest(mouseX, mouseY);
                if (hitShape && hitShape.type === 'text') {
                    editSelectedShape();
                    lastClickTime = 0;
                    return;
                }
            }
            lastClickTime = currentTime;

            // フリーハンド処理
            // フリーハンド処理
            if (currentTool === 'freehand') {
                freehandPoints = [{ x: mouseX, y: mouseY }];
                isDrawing = true;
                return;
            }

            // ポリライン処理
            if (currentTool === 'polyline') {
                let pointX = mouseX;
                let pointY = mouseY;
                
                // Shiftキー押下時：最後の点から水平・垂直・45度に制約
                if (isShiftPressed && polylinePoints.length > 0) {
                    const lastPoint = polylinePoints[polylinePoints.length - 1];
                    const dx = pointX - lastPoint.x;
                    const dy = pointY - lastPoint.y;
                    const angle = Math.atan2(dy, dx) * 180 / Math.PI;
                    const absAngle = Math.abs(angle);
                    
                    if (absAngle < 22.5 || absAngle > 157.5) {
                        // 水平
                        pointY = lastPoint.y;
                    } else if (absAngle >= 67.5 && absAngle <= 112.5) {
                        // 垂直
                        pointX = lastPoint.x;
                    } else {
                        // 45度
                        const dist = Math.max(Math.abs(dx), Math.abs(dy));
                        pointX = lastPoint.x + dist * Math.sign(dx);
                        pointY = lastPoint.y + dist * Math.sign(dy);
                    }
                }
                
                polylinePoints.push({ x: pointX, y: pointY });
                isPolylineActive = true;
                redrawCanvas();
                return;
            }

            if (currentTool === 'select') {
                // 既に選択されている図形の回転ハンドルをチェック（優先）
                if (selectedShape && selectedShape.type === 'image') {
                    if (getRotationHandle(selectedShape, mouseX, mouseY)) {
                        isRotating = true;
                        console.log('回転開始:', selectedShape.rotation);
                        redrawCanvas();
                        return;
                    }
                }

                // 新しい図形を選択
                const hitShape = hitTest(mouseX, mouseY);
                if (hitShape) {
                    selectedShape = hitShape;

                    // ロックされている場合は編集不可
                    if (hitShape.locked) {
                        showToast('この図形はロックされています', 'warning');
                        redrawCanvas();
                        return;
                    }

                    // リサイズハンドルチェック（全図形対応）
                    resizeHandle = getResizeHandle(hitShape, mouseX, mouseY);
                    if (resizeHandle) {
                        isResizing = true;
                        return;
                    }

                    isDragging = true;

                    // フリーハンド・ポリラインの場合はバウンディングボックスから計算
                    if (hitShape.type === 'polyline' || hitShape.type === 'freehand') {
                        let minX = Infinity, minY = Infinity;
                        hitShape.points.forEach(pt => {
                            minX = Math.min(minX, pt.x);
                            minY = Math.min(minY, pt.y);
                        });
                        hitShape.x = minX;
                        hitShape.y = minY;
                    }

                    dragOffsetX = mouseX - hitShape.x;
                    dragOffsetY = mouseY - hitShape.y;
                    dragStartX = hitShape.x;
                    dragStartY = hitShape.y;
                    
                    if (hitShape.width) {
                        document.getElementById('lineWidth').value = hitShape.width;
                        updateSlider('lineWidth');
                    }
                    if (hitShape.fontSize) {
                        document.getElementById('fontSize').value = hitShape.fontSize;
                        updateSlider('fontSize');
                    }

                    updateRotationUI();
                    redrawCanvas();
                } else {
                    selectedShape = null;
                    updateRotationUI();
                    redrawCanvas();
                }
                return;
            }

            startX = mouseX;
            startY = mouseY;

            if (currentTool === 'text') {
                pendingTextPosition = { x: startX, y: startY };
                showTextPopup(e.clientX, e.clientY);
            } else if (currentTool) {
                isDrawing = true;
            }
        });

        canvas.addEventListener('mousemove', (e) => {
            const rect = canvas.getBoundingClientRect();
            const scaleX = canvas.width / rect.width;
            const scaleY = canvas.height / rect.height;
            const mouseX = (e.clientX - rect.left) * scaleX;
            const mouseY = (e.clientY - rect.top) * scaleY;

            // フリーハンド描画中
            if (isDrawing && currentTool === 'freehand') {
                freehandPoints.push({ x: mouseX, y: mouseY });
                redrawCanvas();
                
                // リアルタイムプレビュー
                ctx.strokeStyle = currentColor;
                ctx.lineWidth = parseInt(document.getElementById('lineWidth').value);
                ctx.lineCap = 'round';
                ctx.lineJoin = 'round';
                ctx.beginPath();
                ctx.moveTo(freehandPoints[0].x, freehandPoints[0].y);
                for (let i = 1; i < freehandPoints.length; i++) {
                    ctx.lineTo(freehandPoints[i].x, freehandPoints[i].y);
                }
                ctx.stroke();
                return;
            }

            // ポリライン描画中のプレビュー
            if (isPolylineActive && polylinePoints.length > 0) {
                let previewX = mouseX;
                let previewY = mouseY;
                
                // Shiftキー押下時：最後の点から水平・垂直・45度に制約
                if (isShiftPressed) {
                    const lastPoint = polylinePoints[polylinePoints.length - 1];
                    const dx = previewX - lastPoint.x;
                    const dy = previewY - lastPoint.y;
                    const angle = Math.atan2(dy, dx) * 180 / Math.PI;
                    const absAngle = Math.abs(angle);
                    
                    if (absAngle < 22.5 || absAngle > 157.5) {
                        // 水平
                        previewY = lastPoint.y;
                    } else if (absAngle >= 67.5 && absAngle <= 112.5) {
                        // 垂直
                        previewX = lastPoint.x;
                    } else {
                        // 45度
                        const dist = Math.max(Math.abs(dx), Math.abs(dy));
                        previewX = lastPoint.x + dist * Math.sign(dx);
                        previewY = lastPoint.y + dist * Math.sign(dy);
                    }
                }
                
                redrawCanvas();
                ctx.strokeStyle = currentColor;
                ctx.lineWidth = parseInt(document.getElementById('lineWidth').value);
                ctx.setLineDash([3, 3]);
                ctx.beginPath();
                ctx.moveTo(polylinePoints[polylinePoints.length - 1].x, polylinePoints[polylinePoints.length - 1].y);
                ctx.lineTo(previewX, previewY);
                ctx.stroke();
                ctx.setLineDash([]);
                return;
            }

            // 回転処理
            if (isRotating && selectedShape && selectedShape.type === 'image') {
                let rotation = calculateRotationAngle(selectedShape, mouseX, mouseY);
                
                // Shiftキー押下時：15度単位に制約
                if (isShiftPressed) {
                    rotation = Math.round(rotation / 15) * 15;
                    if (rotation >= 360) rotation = 0;
                }
                
                selectedShape.rotation = rotation;
                
                // UIも更新
                const slider = document.getElementById('rotationAngle');
                const input = document.getElementById('rotationAngleInput');
                slider.value = rotation;
                input.value = rotation;
                
                redrawCanvas();
                return;
            }

            // リサイズ処理
            if (isResizing && selectedShape) {
                // スナップ適用（リサイズ時）
                let resizeMouseX = mouseX;
                let resizeMouseY = mouseY;
                if (snapEnabled) {
                    const snapped = applySnap(mouseX, mouseY);
                    resizeMouseX = snapped.x;
                    resizeMouseY = snapped.y;
                }

                if (selectedShape.type === 'circle') {
                    // 円のリサイズ: 半径を調整（常に正円を維持）
                    const dx = resizeMouseX - (selectedShape.x + selectedShape.w);
                    const dy = resizeMouseY - (selectedShape.y + selectedShape.h);
                    const centerX = selectedShape.x + selectedShape.w / 2;
                    const centerY = selectedShape.y + selectedShape.h / 2;
                    const newRadius = Math.sqrt((resizeMouseX - centerX) ** 2 + (resizeMouseY - centerY) ** 2);
                    selectedShape.w = newRadius * 2;
                    selectedShape.h = newRadius * 2;
                    selectedShape.x = centerX - newRadius;
                    selectedShape.y = centerY - newRadius;
                } else if (selectedShape.type === 'polyline') {
                    // ポリラインのリサイズ: 全ポイントをスケール
                    const oldWidth = selectedShape.w;
                    const oldHeight = selectedShape.h;
                    const dx = resizeMouseX - (selectedShape.x + selectedShape.w);
                    const dy = resizeMouseY - (selectedShape.y + selectedShape.h);
                    
                    if (resizeHandle === 'se') {
                        selectedShape.w += dx;
                        selectedShape.h += dy;
                    } else if (resizeHandle === 'sw') {
                        selectedShape.w -= (resizeMouseX - selectedShape.x);
                        selectedShape.x = resizeMouseX;
                        selectedShape.h += dy;
                    } else if (resizeHandle === 'ne') {
                        selectedShape.w += dx;
                        selectedShape.h -= (resizeMouseY - selectedShape.y);
                        selectedShape.y = resizeMouseY;
                    } else if (resizeHandle === 'nw') {
                        selectedShape.w -= (resizeMouseX - selectedShape.x);
                        selectedShape.h -= (resizeMouseY - selectedShape.y);
                        selectedShape.x = resizeMouseX;
                        selectedShape.y = resizeMouseY;
                    }
                    
                    const scaleX = selectedShape.w / oldWidth;
                    const scaleY = selectedShape.h / oldHeight;
                    selectedShape.points = selectedShape.points.map(p => ({
                        x: selectedShape.x + (p.x - selectedShape.x) * scaleX,
                        y: selectedShape.y + (p.y - selectedShape.y) * scaleY
                    }));
                } else if (selectedShape.type === 'text') {
                    // テキストのリサイズ: フォントサイズを調整
                    const dx = resizeMouseX - (selectedShape.x + selectedShape.w);
                    const dy = resizeMouseY - (selectedShape.y + selectedShape.h);
                    const oldSize = selectedShape.fontSize || 24;
                    const scaleFactor = Math.sqrt((dx * dx + dy * dy) / (selectedShape.w * selectedShape.w + selectedShape.h * selectedShape.h));
                    selectedShape.fontSize = Math.max(12, Math.round(oldSize * (1 + scaleFactor)));
                } else {
                    // 通常の図形（rect, line, arrow等）
                    const dx = resizeMouseX - (selectedShape.x + selectedShape.w);
                    const dy = resizeMouseY - (selectedShape.y + selectedShape.h);
                    
                    // Shiftキー押下時：縦横比を維持
                    if (isShiftPressed) {
                        const aspectRatio = Math.abs(selectedShape.w) / Math.abs(selectedShape.h);
                        
                        if (resizeHandle === 'se') {
                            const newW = selectedShape.w + dx;
                            const newH = newW / aspectRatio * Math.sign(selectedShape.h);
                            selectedShape.w = newW;
                            selectedShape.h = newH;
                        } else if (resizeHandle === 'sw') {
                            const newW = selectedShape.w - (resizeMouseX - selectedShape.x);
                            const newH = newW / aspectRatio * Math.sign(selectedShape.h);
                            selectedShape.x = resizeMouseX;
                            selectedShape.w = newW;
                            selectedShape.h = newH;
                        } else if (resizeHandle === 'ne') {
                            const newW = selectedShape.w + dx;
                            const newH = newW / aspectRatio * Math.sign(selectedShape.h);
                            selectedShape.w = newW;
                            selectedShape.h = newH;
                            selectedShape.y = selectedShape.y + selectedShape.h - newH;
                        } else if (resizeHandle === 'nw') {
                            const newW = selectedShape.w - (resizeMouseX - selectedShape.x);
                            const newH = newW / aspectRatio * Math.sign(selectedShape.h);
                            const oldH = selectedShape.h;
                            selectedShape.x = resizeMouseX;
                            selectedShape.w = newW;
                            selectedShape.h = newH;
                            selectedShape.y = selectedShape.y + oldH - newH;
                        }
                    } else {
                        // 通常のリサイズ
                        if (resizeHandle === 'se') {
                            selectedShape.w += dx;
                            selectedShape.h += dy;
                        } else if (resizeHandle === 'sw') {
                            selectedShape.w -= (resizeMouseX - selectedShape.x);
                            selectedShape.x = resizeMouseX;
                            selectedShape.h += dy;
                        } else if (resizeHandle === 'ne') {
                            selectedShape.w += dx;
                            selectedShape.h -= (resizeMouseY - selectedShape.y);
                            selectedShape.y = resizeMouseY;
                        } else if (resizeHandle === 'nw') {
                            selectedShape.w -= (resizeMouseX - selectedShape.x);
                            selectedShape.h -= (resizeMouseY - selectedShape.y);
                            selectedShape.x = resizeMouseX;
                            selectedShape.y = resizeMouseY;
                        }
                    }
                }
                
                redrawCanvas();
                return;
            }

            if (currentTool === 'select' && isDragging && selectedShape) {
                let newX = mouseX - dragOffsetX;
                let newY = mouseY - dragOffsetY;

                // スナップ適用（ドラッグ時）
                if (snapEnabled) {
                    const snapped = applySnap(newX, newY);
                    newX = snapped.x;
                    newY = snapped.y;
                }

                // Shiftキー押下時：水平または垂直方向に制約
                if (isShiftPressed) {
                    const deltaX = Math.abs(newX - dragStartX);
                    const deltaY = Math.abs(newY - dragStartY);

                    if (deltaX > deltaY) {
                        // 水平移動
                        newY = dragStartY;
                    } else {
                        // 垂直移動
                        newX = dragStartX;
                    }
                }

                // フリーハンド・ポリラインはpoints配列を移動
                if (selectedShape.type === 'polyline' || selectedShape.type === 'freehand') {
                    const deltaX = newX - dragStartX;
                    const deltaY = newY - dragStartY;
                    selectedShape.points = selectedShape.points.map(p => ({
                        x: p.x + deltaX,
                        y: p.y + deltaY
                    }));
                    // バウンディングボックスも更新
                    let minX = Infinity, minY = Infinity, maxX = -Infinity, maxY = -Infinity;
                    selectedShape.points.forEach(pt => {
                        minX = Math.min(minX, pt.x);
                        minY = Math.min(minY, pt.y);
                        maxX = Math.max(maxX, pt.x);
                        maxY = Math.max(maxY, pt.y);
                    });
                    selectedShape.x = minX;
                    selectedShape.y = minY;
                    selectedShape.w = maxX - minX;
                    selectedShape.h = maxY - minY;
                    dragStartX = newX;
                    dragStartY = newY;
                } else {
                    selectedShape.x = newX;
                    selectedShape.y = newY;
                }

                redrawCanvas();
                return;
            }

            if (!isDrawing || !currentTool) return;

            redrawCanvas();
            ctx.strokeStyle = currentColor;
            ctx.lineWidth = parseInt(document.getElementById('lineWidth').value);
            const opacity = parseInt(document.getElementById('fillOpacity').value) / 100;
            const r = parseInt(currentColor.slice(1, 3), 16);
            const g = parseInt(currentColor.slice(3, 5), 16);
            const b = parseInt(currentColor.slice(5, 7), 16);
            ctx.fillStyle = `rgba(${r}, ${g}, ${b}, ${1 - opacity})`;

            let currentX = (e.clientX - canvas.getBoundingClientRect().left) * (canvas.width / canvas.getBoundingClientRect().width);
            let currentY = (e.clientY - canvas.getBoundingClientRect().top) * (canvas.height / canvas.getBoundingClientRect().height);

            // スナップ適用（新規図形描画時）
            if (snapEnabled) {
                const snapped = applySnap(currentX, currentY);
                currentX = snapped.x;
                currentY = snapped.y;
            }

            // Shiftキー制約適用
            if (isShiftPressed) {
                const dx = currentX - startX;
                const dy = currentY - startY;
                if (currentTool === 'line' || currentTool === 'arrow') {
                    const angle = Math.atan2(dy, dx) * 180 / Math.PI;
                    const absAngle = Math.abs(angle);
                    if (absAngle < 22.5 || absAngle > 157.5) currentY = startY;
                    else if (absAngle >= 67.5 && absAngle <= 112.5) currentX = startX;
                    else {
                        const dist = Math.max(Math.abs(dx), Math.abs(dy));
                        currentX = startX + dist * Math.sign(dx);
                        currentY = startY + dist * Math.sign(dy);
                    }
                } else if (['rect', 'highlight', 'mosaic', 'blur', 'circle'].includes(currentTool)) {
                    const size = Math.max(Math.abs(dx), Math.abs(dy));
                    currentX = startX + size * Math.sign(dx);
                    currentY = startY + size * Math.sign(dy);
                }
            }

            // プレビューは破線で描画
            ctx.setLineDash([5, 5]);

            // モザイク・ぼかしは矩形枠のみプレビュー表示
            if (currentTool === 'mosaic' || currentTool === 'blur') {
                ctx.strokeRect(startX, startY, currentX - startX, currentY - startY);
            } else {
                const tempShape = {
                    type: currentTool,
                    x: startX,
                    y: startY,
                    w: currentX - startX,
                    h: currentY - startY,
                    color: currentColor,
                    width: ctx.lineWidth,
                    opacity: opacity
                };
                drawShape(tempShape);
            }

            ctx.setLineDash([]);
        });

        canvas.addEventListener('mouseup', (e) => {
            // 最初に座標関連の変数を定義
            const rect = canvas.getBoundingClientRect();
            const scaleX = canvas.width / rect.width;
            const scaleY = canvas.height / rect.height;
            let endX = (e.clientX - rect.left) * scaleX;
            let endY = (e.clientY - rect.top) * scaleY;

            // 選択モードの操作完了
            if (isRotating) {
                isRotating = false;
                redrawCanvas();
                return;
            }
            if (isResizing) {
                isResizing = false;
                resizeHandle = null;
                redrawCanvas();
                return;
            }
            if (isDragging) {
                isDragging = false;
                return;
            }

            // 描画中でなければここで終了
            if (!isDrawing) return;
            
            // isDrawingフラグをリセット
            isDrawing = false;

            // ツールごとの描画完了処理
            if (currentTool === 'freehand') {
                if (freehandPoints.length > 1) {
                    shapes.push({
                        type: 'freehand',
                        points: [...freehandPoints],
                        color: currentColor,
                        width: parseInt(document.getElementById('lineWidth').value),
                        opacity: parseInt(document.getElementById('fillOpacity').value) / 100
                    });
                }
                freehandPoints = []; // ポイントをクリア
            } else if (currentTool && currentTool !== 'select' && currentTool !== 'text') {
                // Shiftキー制約を適用
                if (isShiftPressed) {
                    const dx = endX - startX;
                    const dy = endY - startY;
                    if (currentTool === 'line' || currentTool === 'arrow') {
                        const angle = Math.atan2(dy, dx) * 180 / Math.PI;
                        const absAngle = Math.abs(angle);
                        if (absAngle < 22.5 || absAngle > 157.5) endY = startY;
                        else if (absAngle >= 67.5 && absAngle <= 112.5) endX = startX;
                        else {
                            const dist = Math.max(Math.abs(dx), Math.abs(dy));
                            endX = startX + dist * Math.sign(dx);
                            endY = startY + dist * Math.sign(dy);
                        }
                    } else if (['rect', 'highlight', 'mosaic', 'blur', 'circle'].includes(currentTool)) {
                        const size = Math.max(Math.abs(dx), Math.abs(dy));
                        endX = startX + size * Math.sign(dx);
                        endY = startY + size * Math.sign(dy);
                    }
                }

                const shape = {
                    type: currentTool,
                    x: startX,
                    y: startY,
                    w: endX - startX,
                    h: endY - startY,
                    color: currentColor,
                    width: parseInt(document.getElementById('lineWidth').value),
                    opacity: parseInt(document.getElementById('fillOpacity').value) / 100
                };


                // ゼロサイズの図形は追加しない
                if (shape.w !== 0 || shape.h !== 0 || shape.type === 'line') {
                    if (currentTool === 'mosaic' || currentTool === 'blur') {
                        // プレビュー枠を消すために一度再描画
                        redrawCanvas();

                        const x = Math.min(shape.x, shape.x + shape.w);
                        const y = Math.min(shape.y, shape.y + shape.h);
                        const w = Math.abs(shape.w);
                        const h = Math.abs(shape.h);
                        if (w > 0 && h > 0) {
                            const imgData = ctx.getImageData(x, y, w, h);
                            if (currentTool === 'mosaic') {
                                shape.mosaicSize = mosaicSize;
                                shape.processedImageData = processMosaicData(imgData, mosaicSize);
                            } else {
                                shape.blurStrength = blurStrength;
                                shape.processedImageData = processBlurData(imgData, blurStrength);
                            }
                        }
                    }
                    shapes.push(shape);
                }
            }
            
            // 最後にキャンバスを再描画
            redrawCanvas();
        });

        canvas.addEventListener('contextmenu', (e) => {
            e.preventDefault();
            
            // ポリライン終了
            if (isPolylineActive && polylinePoints.length > 1) {
                shapes.push({
                    type: 'polyline',
                    points: [...polylinePoints],
                    color: currentColor,
                    width: parseInt(document.getElementById('lineWidth').value),
                    opacity: parseInt(document.getElementById('fillOpacity').value) / 100
                });
                polylinePoints = [];
                isPolylineActive = false;
                redrawCanvas();
                showToast('連続線を追加しました');
                return;
            }
            
            if (currentTool !== 'select' || !selectedShape) return;

            const menu = document.getElementById('contextMenu');
            const rotateMenuItem = document.getElementById('rotateMenuItem');

            // 画像の場合のみ回転メニューを表示
            if (selectedShape.type === 'image') {
                rotateMenuItem.style.display = 'flex';
            } else {
                rotateMenuItem.style.display = 'none';
            }

            menu.style.left = e.clientX + 'px';
            menu.style.top = e.clientY + 'px';
            menu.classList.add('active');
        });

        document.addEventListener('click', (e) => {
            if (!e.target.closest('.context-menu')) {
                document.getElementById('contextMenu').classList.remove('active');
            }
        });

        function editSelectedShape() {
            if (!selectedShape) return;
            
            if (selectedShape.type === 'text') {
                pendingTextPosition = { x: selectedShape.x, y: selectedShape.y };
                document.getElementById('textInput').value = selectedShape.text;
                showTextPopup(window.innerWidth / 2, window.innerHeight / 2);
            }
            
            document.getElementById('contextMenu').classList.remove('active');
        }

        function duplicateSelectedShape() {
            if (!selectedShape) return;

            const newShape = JSON.parse(JSON.stringify(selectedShape));
            newShape.x += 20;
            newShape.y += 20;
            shapes.push(newShape);
            selectedShape = newShape;
            redrawCanvas();

            document.getElementById('contextMenu').classList.remove('active');
            showToast('図形を複製しました');
        }

        function rotateSelectedShape() {
            if (!selectedShape || selectedShape.type !== 'image') return;

            // 回転角度を90度ずつ増加（360度で0に戻る）
            selectedShape.rotation = (selectedShape.rotation || 0) + 90;
            if (selectedShape.rotation >= 360) {
                selectedShape.rotation = 0;
            }

            redrawCanvas();

            document.getElementById('contextMenu').classList.remove('active');
            showToast(`画像を${selectedShape.rotation}°回転しました`);
        }

        function deleteSelectedShape() {
            if (!selectedShape) return;
            
            const index = shapes.indexOf(selectedShape);
            if (index > -1) {
                shapes.splice(index, 1);
                selectedShape = null;
                redrawCanvas();
                showToast('図形を削除しました');
            }
            
            document.getElementById('contextMenu').classList.remove('active');
        }

        function showTextPopup(x, y) {
            const popup = document.getElementById('textPopup');
            const input = document.getElementById('textInput');
            popup.style.left = x + 'px';
            popup.style.top = y + 'px';
            popup.classList.add('active');
            input.focus();
            input.select();
        }

        function confirmText() {
            const text = document.getElementById('textInput').value.trim();
            if (!text) {
                alert('テキストを入力してください');
                return;
            }

            if (pendingTextPosition) {
                const fontSize = parseInt(document.getElementById('fontSize').value);
                
                if (selectedShape && selectedShape.type === 'text') {
                    selectedShape.text = text;
                    selectedShape.fontSize = fontSize;
                    selectedShape.color = currentColor;
                } else {
                    shapes.push({
                        type: 'text',
                        x: pendingTextPosition.x,
                        y: pendingTextPosition.y,
                        text: text,
                        fontSize: fontSize,
                        color: currentColor,
                        opacity: parseInt(document.getElementById('fillOpacity').value) / 100
                    });
                }
                redrawCanvas();
            }

            document.getElementById('textPopup').classList.remove('active');
            document.getElementById('textInput').value = '';
            pendingTextPosition = null;
        }

        function cancelText() {
            document.getElementById('textPopup').classList.remove('active');
            document.getElementById('textInput').value = '';
            pendingTextPosition = null;
        }

        document.getElementById('textInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                confirmText();
            }
        });

        function updateShapeCount() {
            document.getElementById('shapeCount').textContent = shapes.length;
        }

        function updateZoom() {
            canvas.style.transform = `scale(${zoom})`;
            canvas.style.transformOrigin = 'center center';
            document.getElementById('zoomLevel').textContent = Math.round(zoom * 100);
        }

        function zoomIn() {
            zoom = Math.min(zoom + 0.1, 3.0);
            updateZoom();
        }

        function zoomOut() {
            zoom = Math.max(zoom - 0.1, 0.5);
            updateZoom();
        }

        function zoomReset() {
            zoom = 1.0;
            updateZoom();
        }

        function undoLast() {
            if (shapes.length === 0) {
                showToast('削除する図形がありません', 'warning');
                return;
            }
            const removed = shapes.pop();
            redoStack.push(removed); // Redo用に保存
            selectedShape = null;
            redrawCanvas();
            showToast('取り消しました');
        }

        function redoLast() {
            if (redoStack.length === 0) {
                showToast('やり直す操作がありません', 'warning');
                return;
            }
            const restored = redoStack.pop();
            shapes.push(restored);
            selectedShape = null;
            redrawCanvas();
            showToast('やり直しました');
        }

        function clearAll() {
            if (!confirm('すべての図形を削除しますか？')) return;
            shapes = [];
            selectedShape = null;
            redrawCanvas();
            showToast('すべて削除しました');
        }

        // レイヤー管理機能
        function bringToFront() {
            if (!selectedShape) {
                showToast('図形が選択されていません', 'warning');
                return;
            }
            const index = shapes.indexOf(selectedShape);
            if (index === -1 || index === shapes.length - 1) return;
            shapes.splice(index, 1);
            shapes.push(selectedShape);
            redrawCanvas();
            showToast('最前面に移動しました');
        }

        function sendToBack() {
            if (!selectedShape) {
                showToast('図形が選択されていません', 'warning');
                return;
            }
            const index = shapes.indexOf(selectedShape);
            if (index === -1 || index === 0) return;
            shapes.splice(index, 1);
            shapes.unshift(selectedShape);
            redrawCanvas();
            showToast('最背面に移動しました');
        }

        function toggleLock() {
            if (!selectedShape) {
                showToast('図形が選択されていません', 'warning');
                return;
            }
            selectedShape.locked = !selectedShape.locked;
            redrawCanvas();
            showToast(selectedShape.locked ? 'ロックしました' : 'ロック解除しました');
        }

        // スナップ機能
        function applySnap(x, y) {
            let snappedX = x;
            let snappedY = y;
            guidelines = [];

            if (snapToGrid && snapEnabled) {
                snappedX = Math.round(x / gridSize) * gridSize;
                snappedY = Math.round(y / gridSize) * gridSize;
            }

            if (snapToObjects && snapEnabled) {
                shapes.forEach(shape => {
                    if (shape === selectedShape) return;

                    const edges = [
                        { pos: shape.x, type: 'vertical' },
                        { pos: shape.x + shape.w, type: 'vertical' },
                        { pos: shape.x + shape.w / 2, type: 'vertical' },
                        { pos: shape.y, type: 'horizontal' },
                        { pos: shape.y + shape.h, type: 'horizontal' },
                        { pos: shape.y + shape.h / 2, type: 'horizontal' }
                    ];

                    edges.forEach(edge => {
                        if (edge.type === 'vertical' && Math.abs(x - edge.pos) < snapTolerance) {
                            snappedX = edge.pos;
                            guidelines.push({ type: 'vertical', pos: edge.pos });
                        }
                        if (edge.type === 'horizontal' && Math.abs(y - edge.pos) < snapTolerance) {
                            snappedY = edge.pos;
                            guidelines.push({ type: 'horizontal', pos: edge.pos });
                        }
                    });
                });
            }

            return { x: snappedX, y: snappedY };
        }

        function drawGuidelines() {
            ctx.save();
            ctx.strokeStyle = '#FF961C';
            ctx.lineWidth = 1;
            ctx.setLineDash([5, 5]);

            guidelines.forEach(guide => {
                ctx.beginPath();
                if (guide.type === 'vertical') {
                    ctx.moveTo(guide.pos, 0);
                    ctx.lineTo(guide.pos, canvas.height);
                } else {
                    ctx.moveTo(0, guide.pos);
                    ctx.lineTo(canvas.width, guide.pos);
                }
                ctx.stroke();
            });

            ctx.setLineDash([]);
            ctx.restore();
        }

