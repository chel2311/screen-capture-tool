        // SVG エクスポート（統一保存関数使用）
        async function exportAsSVG() {
            document.getElementById('exportMenu').style.display = 'none';
            
            if (!backgroundImage) {
                alert('エクスポートする画像がありません。\n\n先に画像を読み込んでください。');
                return;
            }

            const tempSelected = selectedShape;
            selectedShape = null;
            redrawCanvas();

            try {
                // SVG開始タグ（矢印マーカー定義を含む）
                let svg = `<svg xmlns="http://www.w3.org/2000/svg" width="${canvas.width}" height="${canvas.height}" viewBox="0 0 ${canvas.width} ${canvas.height}">
`;
                svg += `  <defs>
`;
                svg += `    <marker id="arrowhead" markerWidth="10" markerHeight="10" refX="9" refY="3" orient="auto" markerUnits="strokeWidth">
`;
                svg += `      <path d="M0,0 L0,6 L9,3 z" fill="context-stroke"/>
`;
                svg += `    </marker>
`;
                svg += `  </defs>
`;

                // 背景画像をBase64として埋め込み
                svg += `  <image href="${canvas.toDataURL('image/png')}" width="${canvas.width}" height="${canvas.height}"/>
`;

                // 図形をSVG要素に変換
                shapes.forEach(shape => {
                    // 透明度の正しい計算（shape.opacityが大きいほど透明になる）
                    const fillOpacity = shape.opacity !== undefined ? shape.opacity / 100 : 1;
                    const strokeWidth = shape.lineWidth || 2;
                    const color = shape.color || '#FF0000';
                    
                    switch(shape.type) {
                        case 'rect':
                            svg += `  <rect x="${shape.x}" y="${shape.y}" width="${shape.w}" height="${shape.h}" fill="${color}" fill-opacity="${fillOpacity}" stroke="${color}" stroke-width="${strokeWidth}"/>
`;
                            break;
                        case 'circle':
                            // 楕円として正確に描画（Canvas描画と一致）
                            const rx = Math.abs(shape.w) / 2;
                            const ry = Math.abs(shape.h) / 2;
                            const cx = shape.x + shape.w / 2;
                            const cy = shape.y + shape.h / 2;
                            svg += `  <ellipse cx="${cx}" cy="${cy}" rx="${rx}" ry="${ry}" fill="${color}" fill-opacity="${fillOpacity}" stroke="${color}" stroke-width="${strokeWidth}"/>
`;
                            break;
                        case 'line':
                            svg += `  <line x1="${shape.x}" y1="${shape.y}" x2="${shape.x + shape.w}" y2="${shape.y + shape.h}" stroke="${color}" stroke-width="${strokeWidth}"/>
`;
                            break;
                        case 'arrow':
                            svg += `  <line x1="${shape.x}" y1="${shape.y}" x2="${shape.x + shape.w}" y2="${shape.y + shape.h}" stroke="${color}" stroke-width="${strokeWidth}" marker-end="url(#arrowhead)"/>
`;
                            break;
                        case 'text':
                            // Canvas描画と同じフォントサイズとbaseline調整
                            const fontSize = shape.fontSize || 20;
                            svg += `  <text x="${shape.x}" y="${shape.y + fontSize * 0.8}" font-family="Arial, sans-serif" font-size="${fontSize}" fill="${color}">${escapeXml(shape.text || '')}</text>
`;
                            break;
                        case 'freehand':
                            if (shape.points && shape.points.length > 0) {
                                let pathData = `M ${shape.points[0].x} ${shape.points[0].y}`;
                                for (let i = 1; i < shape.points.length; i++) {
                                    pathData += ` L ${shape.points[i].x} ${shape.points[i].y}`;
                                }
                                svg += `  <path d="${pathData}" fill="none" stroke="${color}" stroke-width="${strokeWidth}" stroke-linecap="round" stroke-linejoin="round"/>
`;
                            }
                            break;
                    }
                });
                
                svg += '</svg>';
                
                // SVGファイルとしてBlobを作成
                const blob = new Blob([svg], { type: 'image/svg+xml' });
                const fileName = getFileName() + '.svg';
                
                // 統一された保存関数を呼び出す
                await saveFile(blob, fileName);
                
                // 成功をユーザーに通知
                showToast(`${fileName} を保存しました`);
                updateStats('save'); // 保存統計を更新
            } catch (err) {
                console.error('SVG出力エラー:', err);
                alert('SVG出力に失敗しました。');
            } finally {
                selectedShape = tempSelected;
                redrawCanvas();
            }
        }

        // XML特殊文字のエスケープ
        function escapeXml(text) {
            return text.replace(/&/g, '&amp;')
                       .replace(/</g, '&lt;')
                       .replace(/>/g, '&gt;')
                       .replace(/"/g, '&quot;')
                       .replace(/'/g, '&apos;');
        }

        // ファイル名取得ヘルパー
        function getFileName() {
            const fileNameInput = document.getElementById('fileNameHeader');
            if (fileNameInput && fileNameInput.value) {
                return fileNameInput.value;
            }
            // ファイル名が未入力の場合、日付ベースのファイル名を生成
            const now = new Date();
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            return `capture_${year}${month}${day}_${hours}${minutes}${seconds}`;
        }

