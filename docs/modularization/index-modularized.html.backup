        function loadImageToCanvas(dataUrl) {
            const img = new Image();
            img.onload = () => {
                canvas.width = img.width;
                canvas.height = img.height;
                backgroundImage = img;
                shapes = [];
                zoom = 1.0;
                updateZoom();
                redrawCanvas();
                updateCanvasSize();
                updateCanvasSizeOverlay();
                document.getElementById('trimBtn').disabled = false;
                document.getElementById('resizeInputBtn').disabled = false;
                document.getElementById('presetContainer').classList.remove('preset-hidden');
            };
            img.src = dataUrl;
        }

