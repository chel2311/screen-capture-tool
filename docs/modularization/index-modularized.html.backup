        // 統一的な保存関数（File System Access API対応）
        async function saveFile(blob, fileName) {
            // ファイル名から不正な文字を除去する（セキュリティ対策）
            const sanitizedFileName = fileName.replace(/[\/\:*?"<>|]/g, '_');
            
            // 1. saveDirectoryHandle (保存先フォルダのハンドル) が存在するかチェック
            if (saveDirectoryHandle) {
                try {
                    // 2. 存在する場合: File System Access API を使用してファイルを保存（サニタイズ済みファイル名使用）
                    const fileHandle = await saveDirectoryHandle.getFileHandle(sanitizedFileName, { create: true });
                    const writable = await fileHandle.createWritable();
                    await writable.write(blob);
                    await writable.close();
                } catch (err) {
                    // 4. エラーハンドリング
                    console.error('File System Access APIでの保存エラー:', err);
                    if (err.name === 'NotAllowedError') {
                        alert('フォルダへの保存権限がありません。設定を確認してください。');
                    } else {
                        alert(`保存に失敗しました: ${err.message}`);
                    }
                    // エラーを呼び出し元に伝播させる
                    throw err;
                }
            } else {
                // 3. 存在しない場合: 従来の<a>タグを使ったダウンロード方法にフォールバック
                try {
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = fileName;
                    document.body.appendChild(a); // Firefoxでの互換性のために追加
                    a.click();
                    document.body.removeChild(a); // 作成した要素をクリーンアップ
                    URL.revokeObjectURL(url);
                } catch (err) {
                    // 4. エラーハンドリング
                    console.error('フォールバック保存でのエラー:', err);
                    alert(`ダウンロードに失敗しました: ${err.message}`);
                    throw err;
                }
            }
        }

