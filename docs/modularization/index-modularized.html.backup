                img.alt = stamp.name;
                preview.appendChild(img);

                const name = document.createElement('div');
                name.className = 'stamp-name';
                name.textContent = stamp.name;
                name.title = stamp.name;

                const deleteBtn = document.createElement('button');
                deleteBtn.className = 'stamp-delete';
                deleteBtn.innerHTML = '×';
                deleteBtn.onclick = (e) => {
                    e.stopPropagation();
                    deleteStamp(index);
                };

                item.appendChild(preview);
                item.appendChild(name);
                item.appendChild(deleteBtn);
                list.appendChild(item);
            });
        }

        function addImageStamp() {
            if (imageStamps.length >= 50) {
                showToast('スタンプ数の上限（50件）に達しています', 'warning');
                return;
            }

            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/bmp,image/jpeg,image/jpg,image/png,image/gif';
            input.onchange = (e) => {
                const file = e.target.files[0];
                if (!file) return;

                processImageFile(file);
            };
            input.click();
        }

        function addImageStampFolder() {
            if (imageStamps.length >= 50) {
                showToast('スタンプ数の上限（50件）に達しています', 'warning');
                return;
            }

            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/bmp,image/jpeg,image/jpg,image/png,image/gif';
            input.webkitdirectory = true;  // フォルダ選択を有効化
            input.multiple = true;
            input.onchange = (e) => {
                const files = Array.from(e.target.files);

                // 画像ファイルのみフィルタリング
                const imageFiles = files.filter(file => {
                    return file.type.startsWith('image/') &&
                           (file.type === 'image/bmp' ||
                            file.type === 'image/jpeg' ||
                            file.type === 'image/png' ||
                            file.type === 'image/gif');
                });

                if (imageFiles.length === 0) {
                    showToast('フォルダ内に画像ファイルが見つかりません', 'warning');
                    return;
                }

                // 上限チェック
                const remaining = 50 - imageStamps.length;
                if (imageFiles.length > remaining) {
                    if (!confirm(`${imageFiles.length}件の画像が見つかりましたが、残り${remaining}件まで登録できます。\n最初の${remaining}件を登録しますか？`)) {
                        return;
                    }
                    imageFiles.splice(remaining);
                }

                // 処理中メッセージ
                showToast(`${imageFiles.length}件の画像を読み込み中...`);

                let processed = 0;
                let succeeded = 0;

                imageFiles.forEach((file, index) => {
                    setTimeout(() => {
                        processImageFile(file, () => {
                            processed++;
                            succeeded++;
                            if (processed === imageFiles.length) {
                                showToast(`${succeeded}件の画像スタンプを登録しました`);
                            }
                        }, () => {
                            processed++;
                            if (processed === imageFiles.length) {
                                showToast(`${succeeded}/${imageFiles.length}件の画像スタンプを登録しました`, 'warning');
                            }
                        });
                    }, index * 100);  // 100msずつ遅延させて処理
                });
            };
            input.click();
        }

        function processImageFile(file, onSuccess, onError) {
            // ファイルサイズチェック（5MB制限）
            if (file.size > 5 * 1024 * 1024) {
                console.warn(`スキップ: ${file.name} (5MB超過)`);
                if (onError) onError();
                return;
            }

            const reader = new FileReader();
            reader.onload = (event) => {
                const img = new Image();
                img.onload = () => {
                    // スタンプ名を自動生成（ファイル名から拡張子を除く）
                    const name = file.name.replace(/\.[^/.]+$/, '').slice(0, 20);

                    const stamp = {
                        name: name,
                        dataUrl: event.target.result,
                        width: img.width,
                        height: img.height,
                        createdAt: new Date().toISOString()
                    };

                    imageStamps.push(stamp);
                    saveStamps();
                    renderStampList();

                    if (onSuccess) {
                        onSuccess();
                    } else {
                        showToast('画像スタンプを登録しました');
                    }
                };
                img.onerror = () => {
                    console.warn(`読み込み失敗: ${file.name}`);
                    if (onError) {
                        onError();
                    } else {
                        showToast('画像の読み込みに失敗しました', 'warning');
                    }
                };
                img.src = event.target.result;
            };
            reader.readAsDataURL(file);
        }

        function applyStamp(index) {
            if (!backgroundImage) {
                showToast('先に画像を読み込んでください', 'warning');
                return;
            }

            const stamp = imageStamps[index];
            if (!stamp) return;

            const img = new Image();
            img.onload = () => {
                // キャンバス中央に配置
                const centerX = canvas.width / 2;
                const centerY = canvas.height / 2;

                // スタンプサイズをキャンバスの30%に制限
                const maxSize = Math.min(canvas.width, canvas.height) * 0.3;
                let w = img.width;
                let h = img.height;

                if (w > maxSize || h > maxSize) {
                    const scale = maxSize / Math.max(w, h);
                    w *= scale;
                    h *= scale;
                }

                const shape = {
                    type: 'image',
                    x: centerX - w / 2,
                    y: centerY - h / 2,
                    w: w,
                    h: h,
                    imageData: stamp.dataUrl,
                    imageName: stamp.name,
                    rotation: 0  // 初期回転角度
                };

                shapes.push(shape);
                redrawCanvas();
                showToast(`「${stamp.name}」を挿入しました`);
                document.getElementById('shapeCount').textContent = shapes.length;
            };
            img.src = stamp.dataUrl;
        }

        function deleteStamp(index) {
            if (!confirm('このスタンプを削除しますか？')) return;

            imageStamps.splice(index, 1);
            saveStamps();
            renderStampList();
            showToast('スタンプを削除しました');
        }

        function clearAllStamps() {
            if (imageStamps.length === 0) {
                showToast('削除するスタンプがありません', 'warning');
                return;
            }

            if (!confirm(`すべてのスタンプ（${imageStamps.length}件）を削除しますか？`)) return;

            imageStamps = [];
            saveStamps();
            renderStampList();
            showToast('すべてのスタンプを削除しました');
        }

        // 初期化
        loadStamps();
    </script>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <!-- jsPDF for PDF export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        // DOMロード後にLucideアイコン初期化
        lucide.createIcons();

        // タブ切り替え機能（Gemini推奨のイベント委任パターン）
        const sidebar = document.querySelector('.sidebar');
        const tabButtons = sidebar.querySelector('.tab-buttons');

        tabButtons.addEventListener('click', (event) => {
            // クリックされたのがタブボタンでなければ処理を中断
            const clickedButton = event.target.closest('.tab-button');
            if (!clickedButton) return;

            // 1. 全てのタブボタンから 'active' クラスを削除
            tabButtons.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });

            // 2. クリックされたボタンに 'active' クラスを追加
            clickedButton.classList.add('active');

            // 3. 表示対象のタブIDを取得
            const targetTabId = clickedButton.dataset.tab;

            // 4. 全てのコンテンツを一旦非表示に
            sidebar.querySelectorAll('.tool-section[data-content]').forEach(section => {
                section.hidden = true;
            });

            // 5. 対象のコンテンツのみを表示
            sidebar.querySelectorAll(`.tool-section[data-content="${targetTabId}"]`).forEach(section => {
                section.hidden = false;
            });

            // 6. Lucideアイコンを再初期化（動的表示切替後に必要）
            lucide.createIcons();
        });
    </script>
</body>
