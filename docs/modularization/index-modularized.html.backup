        // 画面キャプチャ機能
        async function captureScreen() {
            try {
                const stream = await navigator.mediaDevices.getDisplayMedia({
                    video: { mediaSource: 'screen' }
                });

                const video = document.createElement('video');
                video.srcObject = stream;
                video.play();

                video.onloadedmetadata = () => {
                    const tempCanvas = document.createElement('canvas');
                    tempCanvas.width = video.videoWidth;
                    tempCanvas.height = video.videoHeight;
                    const tempCtx = tempCanvas.getContext('2d');
                    tempCtx.drawImage(video, 0, 0);

                    stream.getTracks().forEach(track => track.stop());

                    loadImageToCanvas(tempCanvas.toDataURL('image/png'));
                    showToast('画面をキャプチャしました');

                    // ウィンドウを最前面に（複数回試行で確実に）
                    setTimeout(() => {
                        window.focus();
                        if (window.opener) {
                            window.opener.focus();
                            window.focus();
                        }
                    }, 100);
                };
            } catch (err) {
                if (err.name !== 'NotAllowedError') {
                    alert('画面キャプチャに失敗しました。\n\nChrome、Edge（最新版）をご利用ください。');
                }
            }
        }

        // プリセットサイズでリサイズ
        function resizeToPreset(width, height) {
            if (!backgroundImage) return;

            const currentWidth = canvas.width;
            const currentHeight = canvas.height;

            if (!confirm(`${currentWidth}×${currentHeight}px → ${width}×${height}px\nリサイズしますか？`)) {
                return;
            }

            applyResize(width, height);
        }

        // パーセントでリサイズ
        function resizeByPercent(percent) {
            if (!backgroundImage) return;

            const currentWidth = canvas.width;
            const currentHeight = canvas.height;
            const scale = percent / 100;
            const newWidth = Math.round(currentWidth * scale);
            const newHeight = Math.round(currentHeight * scale);

            if (newWidth < 100 || newHeight < 100) {
                alert('リサイズ後のサイズが小さすぎます（最小100px）');
                return;
            }

            if (!confirm(`${currentWidth}×${currentHeight}px → ${newWidth}×${newHeight}px (${percent}%)\nリサイズしますか？`)) {
                return;
            }

            applyResize(newWidth, newHeight);
        }

        // リサイズを適用
        function applyResize(newWidth, newHeight) {
            const currentWidth = canvas.width;
            const currentHeight = canvas.height;

            // スケール比を計算
            const scaleX = newWidth / currentWidth;
            const scaleY = newHeight / currentHeight;

            // 全図形をスケーリング
            shapes = shapes.map(shape => {
                const newShape = { ...shape };

                newShape.x = shape.x * scaleX;
                newShape.y = shape.y * scaleY;
                if (shape.w !== undefined) newShape.w = shape.w * scaleX;
                if (shape.h !== undefined) newShape.h = shape.h * scaleY;

                // ポリライン
                if (shape.type === 'polyline' && shape.points) {
                    newShape.points = shape.points.map(pt => ({
                        x: pt.x * scaleX,
                        y: pt.y * scaleY
                    }));
                }

                // テキストフォントサイズ
                if (shape.type === 'text' && shape.fontSize) {
                    newShape.fontSize = Math.round(shape.fontSize * Math.min(scaleX, scaleY));
                }

                return newShape;
            });

            // キャンバスサイズ変更
            canvas.width = newWidth;
            canvas.height = newHeight;

            redrawCanvas();
            updateCanvasSize();
            updateCanvasSizeOverlay();
        }

        // 数値入力でリサイズ
        function resizeByInput() {
            if (!backgroundImage) return;

            const currentWidth = canvas.width;
            const currentHeight = canvas.height;
            const aspectRatio = currentWidth / currentHeight;

            // リサイズ方法を選択
            const method = prompt(
                `リサイズ方法を選択してください：\n` +
                `現在のサイズ: ${currentWidth} × ${currentHeight}px\n\n` +
                `1: 幅を指定（高さは自動計算）\n` +
                `2: 高さを指定（幅は自動計算）\n` +
                `3: パーセントで指定\n\n` +
                `番号を入力してください (1/2/3)`,
                '1'
            );

            if (!method || !['1', '2', '3'].includes(method)) return;

            let newWidth, newHeight;

            if (method === '1') {
                // 幅指定
                const inputStr = prompt(`新しい幅を入力してください（現在: ${currentWidth}px）`, currentWidth);
                if (!inputStr) return;
                newWidth = parseInt(inputStr);
                if (isNaN(newWidth) || newWidth < 100) {
                    alert('100以上の数値を入力してください');
                    return;
                }
                newHeight = Math.round(newWidth / aspectRatio);

            } else if (method === '2') {
                // 高さ指定
                const inputStr = prompt(`新しい高さを入力してください（現在: ${currentHeight}px）`, currentHeight);
                if (!inputStr) return;
                newHeight = parseInt(inputStr);
                if (isNaN(newHeight) || newHeight < 100) {
                    alert('100以上の数値を入力してください');
                    return;
                }
                newWidth = Math.round(newHeight * aspectRatio);

            } else if (method === '3') {
                // パーセント指定
                const inputStr = prompt(`拡大率をパーセントで入力してください\n（100% = 現在のサイズ）`, '100');
                if (!inputStr) return;
                const percent = parseFloat(inputStr);
                if (isNaN(percent) || percent <= 0) {
                    alert('0より大きい数値を入力してください');
                    return;
                }
                const scale = percent / 100;
                newWidth = Math.round(currentWidth * scale);
                newHeight = Math.round(currentHeight * scale);

                if (newWidth < 100 || newHeight < 100) {
                    alert('リサイズ後のサイズが小さすぎます（最小100px）');
                    return;
                }
            }

            // 確認
            if (!confirm(`${currentWidth}×${currentHeight}px → ${newWidth}×${newHeight}px\nリサイズしますか？`)) {
                return;
            }

            applyResize(newWidth, newHeight);
        }

        // トリミングモード
        function startTrimMode() {
            if (!backgroundImage) return;
            
            trimMode = true;
            const trimCanvas = document.getElementById('trimCanvas');
            const trimCtx = trimCanvas.getContext('2d');
            
            trimCanvas.width = canvas.width;
            trimCanvas.height = canvas.height;
            trimCtx.drawImage(backgroundImage, 0, 0);
            
            document.getElementById('trimOverlay').classList.add('active');
            
            let trimStartX, trimStartY, isTrimming = false;
            
            trimCanvas.onmousedown = (e) => {
                const rect = trimCanvas.getBoundingClientRect();
                trimStartX = (e.clientX - rect.left) * (trimCanvas.width / rect.width);
                trimStartY = (e.clientY - rect.top) * (trimCanvas.height / rect.height);
                isTrimming = true;
            };
            
            trimCanvas.onmousemove = (e) => {
                if (!isTrimming) return;
                const rect = trimCanvas.getBoundingClientRect();
                const currentX = (e.clientX - rect.left) * (trimCanvas.width / rect.width);
                const currentY = (e.clientY - rect.top) * (trimCanvas.height / rect.height);
                
                trimCtx.clearRect(0, 0, trimCanvas.width, trimCanvas.height);
                trimCtx.drawImage(backgroundImage, 0, 0);
                
                trimCtx.fillStyle = 'rgba(0,0,0,0.5)';
                trimCtx.fillRect(0, 0, trimCanvas.width, trimCanvas.height);
                
                const w = currentX - trimStartX;
                const h = currentY - trimStartY;
                trimCtx.clearRect(trimStartX, trimStartY, w, h);
                trimCtx.drawImage(backgroundImage, trimStartX, trimStartY, w, h, trimStartX, trimStartY, w, h);
                
                trimCtx.strokeStyle = '#005BAB';
                trimCtx.lineWidth = 3;
                trimCtx.strokeRect(trimStartX, trimStartY, w, h);
                
                trimRect = { x: trimStartX, y: trimStartY, w: w, h: h };
            };
            
            trimCanvas.onmouseup = () => {
                isTrimming = false;
            };
        }

        function confirmTrim() {
            if (trimRect.w === 0 || trimRect.h === 0) {
                alert('トリミング範囲を選択してください');
                return;
            }
            
            const tempCanvas = document.createElement('canvas');
            const x = Math.min(trimRect.x, trimRect.x + trimRect.w);
            const y = Math.min(trimRect.y, trimRect.y + trimRect.h);
            const w = Math.abs(trimRect.w);
            const h = Math.abs(trimRect.h);
            
            tempCanvas.width = w;
            tempCanvas.height = h;
            const tempCtx = tempCanvas.getContext('2d');
            tempCtx.drawImage(backgroundImage, x, y, w, h, 0, 0, w, h);
            
            loadImageToCanvas(tempCanvas.toDataURL('image/png'));
            cancelTrim();
            showToast('画像をトリミングしました');
        }

        function cancelTrim() {
            trimMode = false;
            document.getElementById('trimOverlay').classList.remove('active');
            trimRect = { x: 0, y: 0, w: 0, h: 0 };
        }

        // フォルダパスを表示
        async function displayFolderPath(handle) {
            try {
                // フォルダ名とアイコンを表示（完全パスはセキュリティ上取得不可）
                const pathParts = [handle.name];
                
                // 親フォルダを遡って取得（可能な範囲で）
                let currentHandle = handle;
                let maxDepth = 5; // 最大5階層まで
                
                while (maxDepth > 0) {
                    try {
                        // Note: getParent()は一部のブラウザでは未実装
                        if (currentHandle.getParent) {
                            const parent = await currentHandle.getParent();
                            if (parent) {
                                pathParts.unshift(parent.name);
                                currentHandle = parent;
                            } else {
                                break;
                            }
                        } else {
                            break;
                        }
                    } catch {
                        break;
                    }
                    maxDepth--;
                }
                
                // パス表示を構築
                const pathDisplay = pathParts.length > 1 
                    ? `.../${pathParts.slice(-3).join('/')}` 
                    : pathParts[0];
                
                document.getElementById('folderDisplay').innerHTML = `
                    <i data-lucide="folder-open" style="width: 14px; height: 14px; vertical-align: middle; color: #005BAB;"></i> 
                    <strong style="color: #005BAB;">${pathDisplay}</strong>
                `;
                lucide.createIcons();
            } catch (err) {
                console.error('パス表示エラー:', err);
                // エラー時は名前のみ表示
                document.getElementById('folderDisplay').innerHTML = `
                    <i data-lucide="folder-open" style="width: 14px; height: 14px; vertical-align: middle; color: #005BAB;"></i> 
                    <strong style="color: #005BAB;">${handle.name}</strong>
                `;
                lucide.createIcons();
            }
        }
        
        // 保存先フォルダ選択
        async function selectSaveFolder() {
            if (!('showDirectoryPicker' in window)) {
                alert('お使いのブラウザはフォルダ選択機能に対応していません。\n\nChrome、Edge（最新版）をご利用ください。\n\n※通常の保存はブラウザのダウンロードフォルダに保存されます。');
                return;
            }

            try {
                const options = { mode: 'readwrite' };
                // 既存の保存先がある場合はそこから開始
                if (saveDirectoryHandle) {
                    options.startIn = saveDirectoryHandle;
                }
                
                saveDirectoryHandle = await window.showDirectoryPicker(options);
                
                // フォルダパスを構築して表示
                await displayFolderPath(saveDirectoryHandle);
                showToast(`保存先を設定しました`);
                
                // IndexedDBに保存
                if (db) {
                    const transaction = db.transaction(['settings'], 'readwrite');
                    const store = transaction.objectStore('settings');
                    store.put(saveDirectoryHandle, 'saveDirectory');
                }
            } catch (err) {
                if (err.name !== 'AbortError') {
                    console.error(err);
                    alert('フォルダの選択に失敗しました。');
                }
            }
        }
        
        // 保存済みフォルダを読み込み
        async function loadSavedDirectory() {
            if (!db) return;

            try {
                const transaction = db.transaction(['settings'], 'readonly');
                const store = transaction.objectStore('settings');
                const request = store.get('saveDirectory');

                request.onsuccess = async () => {
                    const handle = request.result;
                    if (!handle) return;

                    try {
                        // 権限確認（verify実行で有効性チェック）
                        await handle.queryPermission({ mode: 'readwrite' });

                        // ハンドルが有効な場合、再選択ボタンを表示
                        document.getElementById('folderDisplay').innerHTML = `
                            <i data-lucide="folder-open" style="width: 14px; height: 14px; vertical-align: middle; color: #FF961C;"></i>
                            <button onclick="restoreSavedDirectory()" style="background: #fff3cd; color: #856404; border: 1px solid #ffeeba; padding: 4px 8px; border-radius: 4px; cursor: pointer; font-size: 11px; font-weight: 600;">
                                前回の保存先 (${handle.name}) を復元
                            </button>
                        `;
                        lucide.createIcons();
                    } catch (verifyErr) {
                        console.log('ハンドル検証エラー（削除または移動された可能性）:', verifyErr);
                        // 無効なハンドルを削除
                        const delTransaction = db.transaction(['settings'], 'readwrite');
                        const delStore = delTransaction.objectStore('settings');
                        delStore.delete('saveDirectory');
                    }
                };
            } catch (err) {
                console.error('保存先フォルダ読み込みエラー:', err);
            }
        }

        // 保存済みフォルダを復元（ユーザー操作）
        async function restoreSavedDirectory() {
            if (!db) return;

            try {
                const transaction = db.transaction(['settings'], 'readonly');
                const store = transaction.objectStore('settings');
                const request = store.get('saveDirectory');

                request.onsuccess = async () => {
                    const handle = request.result;
                    if (!handle) return;

                    try {
                        // ユーザー操作による権限要求
                        const permission = await handle.requestPermission({ mode: 'readwrite' });
                        if (permission === 'granted') {
                            saveDirectoryHandle = handle;
                            await displayFolderPath(handle);
                            showToast('保存先フォルダを復元しました');
                        }
                    } catch (err) {
                        console.error('権限取得エラー:', err);
                        alert('保存先フォルダへのアクセス権限が取得できませんでした。\n再度「保存先選択」から設定してください。');
                    }
                };
            } catch (err) {
                console.error('フォルダ復元エラー:', err);
            }
        }

        // クリップボードから貼り付け
        async function pasteFromClipboard() {
            try {
                const items = await navigator.clipboard.read();
                for (const item of items) {
                    if (item.types.includes('image/png')) {
                        const blob = await item.getType('image/png');
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            loadImageToCanvas(e.target.result);
                            showToast('画像を読み込みました');
                        };
                        reader.readAsDataURL(blob);
                        return;
                    }
                }
                alert('クリップボードに画像がありません。\n\nWin+Shift+S でスクリーンショットを撮影してください。');
            } catch (err) {
                alert('クリップボードへのアクセスに失敗しました。');
                console.error(err);
            }
        }

