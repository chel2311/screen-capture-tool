        function updateSlider(id) {
            const value = document.getElementById(id).value;
            // 入力フィールドも同期
            const inputField = document.getElementById(id + 'Input');
            if (inputField) {
                inputField.value = value;
            }

            // グローバル変数の更新
            if (id === 'mosaicSize') {
                mosaicSize = parseInt(value);
            } else if (id === 'blurStrength') {
                blurStrength = parseInt(value);
            }

            if (selectedShape) {
                if (id === 'lineWidth') {
                    selectedShape.width = parseInt(value);
                } else if (id === 'fontSize' && selectedShape.type === 'text') {
                    selectedShape.fontSize = parseInt(value);
                } else if (id === 'fillOpacity') {
                    selectedShape.opacity = parseInt(value) / 100;
                } else if (id === 'mosaicSize' && selectedShape.type === 'mosaic') {
                    selectedShape.mosaicSize = parseInt(value);
                } else if (id === 'blurStrength' && selectedShape.type === 'blur') {
                    selectedShape.blurStrength = parseInt(value);
                }
                redrawCanvas();
            }
        }

        // 入力フィールドからスライダーを更新
        function updateSliderFromInput(id) {
            const inputField = document.getElementById(id + 'Input');
            const slider = document.getElementById(id);

            if (!inputField || !slider) return;

            let value = parseInt(inputField.value);
            const min = parseInt(slider.min);
            const max = parseInt(slider.max);

            // 範囲チェック
            if (isNaN(value) || value < min) {
                value = min;
            } else if (value > max) {
                value = max;
            }

            // 入力フィールドを補正
            inputField.value = value;

            // スライダーを更新
            slider.value = value;

            // 既存のupdateSlider関数を呼び出し
            updateSlider(id);
        }

