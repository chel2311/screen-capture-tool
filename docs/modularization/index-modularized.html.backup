        let startX = 0;
        let startY = 0;
        let shapes = [];
        let redoStack = []; // Redo用スタック
        let backgroundImage = null;

        // スナップ機能用変数
        let snapEnabled = false;
        let snapToGrid = false;
        let snapToObjects = false;
        let gridSize = 10; // px
        let snapTolerance = 8; // px
        let guidelines = []; // 表示するガイドライン
        
        // スタイルプリセット用変数
        let stylePresets = [
            { name: '赤・太線', color: '#FF0000', lineWidth: 5, opacity: 0 },
            { name: '青・細線', color: '#0000FF', lineWidth: 2, opacity: 0 },
            { name: '黄・半透明', color: '#FFFF00', lineWidth: 3, opacity: 50 }
        ];
        let currentPresetIndex = -1;
        
        let zoom = 1.0;
        let savedCount = 0;
        let pendingTextPosition = null;
        let selectedShape = null;
        let isDragging = false;
        let isResizing = false;
        let isRotating = false;  // 回転中フラグ
        let resizeHandle = null;
        let dragOffsetX = 0;
        let dragOffsetY = 0;
