        // JPEG エクスポート（統一保存関数使用）
        async function exportAsJPEG() {
            document.getElementById('exportMenu').style.display = 'none';
            
            if (!backgroundImage) {
                alert('エクスポートする画像がありません。\n\n先に画像を読み込んでください。');
                return;
            }

            // 画質選択モーダルを表示
            const quality = prompt('JPEG画質を選択してください:\n\n1: 高画質 (95%)\n2: 中画質 (80%)\n3: 低画質 (60%)\n\n数字を入力:', '1');
            
            if (!quality) return;
            
            let qualityValue;
            switch(quality) {
                case '1': qualityValue = 0.95; break;
                case '2': qualityValue = 0.80; break;
                case '3': qualityValue = 0.60; break;
                default:
                    alert('1, 2, 3 のいずれかを入力してください。');
                    return;
            }

            const tempSelected = selectedShape;
            selectedShape = null;
            redrawCanvas();

            try {
                // canvas.toBlob はコールバックベースのため、Promiseでラップして async/await で扱えるようにする
                const blob = await new Promise((resolve, reject) => {
                    canvas.toBlob((blob) => {
                        if (blob) {
                            resolve(blob);
                        } else {
                            reject(new Error('JPEGへの画像エンコードに失敗しました。'));
                        }
                    }, 'image/jpeg', qualityValue);
                });

                const fileName = getFileName() + '.jpg';
                
                // 統一された保存関数を呼び出す
                await saveFile(blob, fileName);

                // 成功をユーザーに通知
                showToast(`${fileName} を保存しました`);
                updateStats('save'); // 保存統計を更新

            } catch (err) {
                // saveFile内で既にアラートが表示されている場合があるため、コンソールへのログ出力に留める
                console.error('JPEGのエクスポート処理全体でエラーが発生しました:', err);
            } finally {
                // 選択状態を元に戻して再描画
                selectedShape = tempSelected;
                redrawCanvas();
            }
        }

